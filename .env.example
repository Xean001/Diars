# Entorno de ejecución
ASPNETCORE_ENVIRONMENT=Production

# URLs de escucha (Coolify usa puerto 8080)
ASPNETCORE_URLS=http://+:8080

# Cadena de conexión a SQL Server
# Formato: Server=HOST,PORT;Database=NOMBRE_BD;User Id=USUARIO;Password=CONTRASEÑA;TrustServerCertificate=True;
ConnectionStrings__DefaultConnection=Server=142.93.27.239,1433;Database=RunaTalentoDB;User Id=sa;Password=Sqlserver123!;TrustServerCertificate=True;

# Configuración de Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning

# Hosts permitidos (* para todos, o tu dominio específico)
AllowedHosts=*

