@model RunaTalento.Models.MedallaEstudiante
@{
    ViewData["Title"] = "Eliminar Medalla Otorgada";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<div class="docente-card">
    <div class="card-header-custom bg-danger text-white">
        <i class="bi bi-trash-fill"></i>
        <h3>Eliminar Medalla Otorgada</h3>
    </div>
    <p class="card-subtitle text-danger">¿Estás seguro de que deseas eliminar esta medalla otorgada?</p>

    <div class="alert alert-warning mt-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Advertencia:</strong> Esta acción eliminará permanentemente este reconocimiento del historial del estudiante.
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title mb-4">
                <i class="bi bi-info-circle-fill text-info"></i>
                Detalles de la Medalla Otorgada
            </h5>
            
            <dl class="row">
                <dt class="col-sm-4">Estudiante:</dt>
                <dd class="col-sm-8">
                    <i class="bi bi-person-circle text-primary"></i>
                    <strong>@Model.Estudiante?.Nombres @Model.Estudiante?.Apellidos</strong>
                    <br />
                    <small class="text-muted">@Model.Estudiante?.Email</small>
                </dd>

                <dt class="col-sm-4">Medalla:</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-award-fill"></i> @Model.Medalla?.Nombre
                    </span>
                    @if (!string.IsNullOrEmpty(Model.Medalla?.Descripcion))
                    {
                        <br />
                        <small class="text-muted">@Model.Medalla.Descripcion</small>
                    }
                </dd>

                <dt class="col-sm-4">Fecha de Otorgamiento:</dt>
                <dd class="col-sm-8">
                    <i class="bi bi-calendar3"></i> @Model.FechaOtorgada.ToString("dd/MM/yyyy")
                    <br />
                    <i class="bi bi-clock"></i> @Model.FechaOtorgada.ToString("HH:mm")
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="EliminarMedallaOtorgada" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="IdMedallaEstudiante" />
        <div class="d-flex justify-content-between">
            <a asp-action="OtorgarMedallas" class="btn btn-secondary-custom">
                <i class="bi bi-x-circle"></i> No, Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Sí, Eliminar Medalla Otorgada
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Confirmación adicional antes de eliminar
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!confirm('¿Estás completamente seguro de eliminar esta medalla otorgada? Esta acción no se puede deshacer.')) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}
