@model RunaTalento.Models.Incentivo

@{
    ViewData["Title"] = "Editar Incentivo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-header">
    <div class="admin-header-content">
        <div>
            <h1 class="admin-title">
                <i class="bi bi-pencil-fill"></i>
                Editar Incentivo
            </h1>
            <p class="admin-subtitle">Modifica la información del incentivo automático</p>
        </div>
        <a asp-controller="Incentivos" asp-action="Index" class="btn-secondary-admin">
            <i class="bi bi-arrow-left"></i>
            Volver a Incentivos
        </a>
    </div>
</div>

<div class="admin-content">
    <div class="form-container">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="IdIncentivo" />
            <input type="hidden" asp-for="FechaCreacion" />

            <div class="form-group-admin">
                <label asp-for="Nombre" class="form-label-admin">
                    <i class="bi bi-gift"></i>
                    Nombre del Incentivo <span class="required">*</span>
                </label>
                <input asp-for="Nombre" class="form-control-admin" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group-admin">
                <label asp-for="Descripcion" class="form-label-admin">
                    <i class="bi bi-text-paragraph"></i>
                    Descripción
                </label>
                <textarea asp-for="Descripcion" class="form-control-admin" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group-admin">
                        <label asp-for="PuntosRequeridos" class="form-label-admin">
                            <i class="bi bi-star-fill"></i>
                            Puntos Requeridos <span class="required">*</span>
                        </label>
                        <input asp-for="PuntosRequeridos" type="number" class="form-control-admin" min="1" />
                        <span asp-validation-for="PuntosRequeridos" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group-admin">
                        <label asp-for="IconoUrl" class="form-label-admin">
                            <i class="bi bi-image"></i>
                            Ícono (Clase Bootstrap Icons)
                        </label>
                        <input asp-for="IconoUrl" class="form-control-admin" />
                        <span asp-validation-for="IconoUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group-admin">
                <div class="form-check">
                    <input asp-for="Activo" class="form-check-input" type="checkbox" />
                    <label asp-for="Activo" class="form-check-label">
                        <strong>Incentivo activo</strong>
                        <br>
                        <small class="text-muted">
                            Si está activo, se otorgará automáticamente a los estudiantes
                        </small>
                    </label>
                </div>
            </div>

            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Atención:</strong> Si cambias los puntos requeridos, NO afectará a los estudiantes que ya obtuvieron este incentivo.
            </div>

            <div class="form-actions">
                <a asp-controller="Incentivos" asp-action="Index" class="btn-secondary-admin">
                    <i class="bi bi-x-circle"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn-primary-admin">
                    <i class="bi bi-check-circle-fill"></i>
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
