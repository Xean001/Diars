@model RunaTalento.Models.MedallaEstudiante

@{
    ViewData["Title"] = "Otorgar Medalla";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-award"></i> Otorgar Medalla a Estudiante</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="IdMedalla" class="form-label">Medalla</label>
                            <select asp-for="IdMedalla" class="form-select" asp-items="ViewBag.IdMedalla">
                                <option value="">-- Seleccione una medalla --</option>
                            </select>
                            <span asp-validation-for="IdMedalla" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdEstudiante" class="form-label">Estudiante</label>
                            <select asp-for="IdEstudiante" class="form-select" asp-items="ViewBag.IdEstudiante">
                                <option value="">-- Seleccione un estudiante --</option>
                            </select>
                            <span asp-validation-for="IdEstudiante" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Nota:</strong> La fecha de otorgamiento se registrará automáticamente.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-award"></i> Otorgar Medalla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
