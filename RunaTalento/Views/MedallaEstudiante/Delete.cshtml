@model RunaTalento.Models.MedallaEstudiante

@{
    ViewData["Title"] = "Revocar Medalla";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Revocación de Medalla</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>¿Está seguro que desea revocar esta medalla?</strong>
                        <p class="mb-0">Esta acción quitará la medalla del estudiante.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.Medalla?.ImagenUrl))
                            {
                                <img src="@Model.Medalla.ImagenUrl" alt="@Model.Medalla.Nombre" 
                                     class="img-fluid mb-3" style="max-height: 150px;" />
                            }
                            else
                            {
                                <div class="mb-3">
                                    <i class="bi bi-award-fill text-warning" style="font-size: 6rem;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-5">Medalla:</dt>
                                <dd class="col-sm-7">@Model.Medalla?.Nombre</dd>

                                <dt class="col-sm-5">Estudiante:</dt>
                                <dd class="col-sm-7">
                                    @Model.Estudiante?.Nombres @Model.Estudiante?.Apellidos
                                </dd>

                                <dt class="col-sm-5">Fecha Otorgada:</dt>
                                <dd class="col-sm-7">@Model.FechaOtorgada.ToString("dd/MM/yyyy")</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdMedallaEstudiante" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Revocar Medalla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
