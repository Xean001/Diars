@model IEnumerable<RunaTalento.Models.Curso>

@{
    ViewData["Title"] = "Gestión de Cursos";
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_LayoutAdmin.cshtml" : 
             User.IsInRole("Docente") ? "~/Views/Shared/_LayoutDocente.cshtml" : 
             "~/Views/Shared/_Layout.cshtml";
}

<!-- Admin View -->
@if (User.IsInRole("Admin"))
{
    <div class="admin-header">
        <div class="admin-header-content">
            <div>
                <h1 class="admin-title">
                    <i class="bi bi-book-fill"></i>
                    Gestión de Cursos
                </h1>
                <p class="admin-subtitle">Administra los cursos y asigna docentes</p>
            </div>
            <a asp-action="Create" class="btn-primary-admin">
                <i class="bi bi-plus-circle-fill"></i>
                Nuevo Curso
            </a>
        </div>
    </div>

    <div class="admin-content">
        @if (!Model.Any())
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <h3>No hay cursos registrados</h3>
                <p>Comienza creando tu primer curso</p>
                <a asp-action="Create" class="btn-primary-admin">
                    <i class="bi bi-plus-circle-fill"></i>
                    Crear Primer Curso
                </a>
            </div>
        }
        else
        {
            <div class="table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Curso</th>
                            <th>Descripción</th>
                            <th>Docente Asignado</th>
                            <th>Actividades</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var curso in Model)
                        {
                            <tr>
                                <td>
                                    <div class="table-item-main">
                                        <i class="bi bi-book-fill text-primary"></i>
                                        <strong>@curso.Nombre</strong>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">@(curso.Descripcion ?? "Sin descripción")</span>
                                </td>
                                <td>
                                    @if (curso.CursoDocentes != null && curso.CursoDocentes.Any())
                                    {
                                        <div class="d-flex flex-column gap-1">
                                            @foreach (var cd in curso.CursoDocentes)
                                            {
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="bi bi-person-circle"></i>
                                                    <div>
                                                        <div>@cd.Docente?.Nombres @cd.Docente?.Apellidos</div>
                                                        <small class="text-muted">@cd.Docente?.Email</small>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <small class="text-muted mt-1">
                                            <i class="bi bi-people-fill"></i> @curso.CursoDocentes.Count docente(s)
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="bi bi-exclamation-triangle"></i> Sin docentes asignados
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        @(curso.Actividades?.Count ?? 0) actividades
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@curso.IdCurso" class="btn-action btn-action-info" title="Ver detalles">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@curso.IdCurso" class="btn-action btn-action-warning" title="Editar">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@curso.IdCurso" class="btn-action btn-action-danger" title="Eliminar">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
}
else
{
    <!-- Docente View (solo lectura) -->
    <div class="container mt-4">
        <h1><i class="bi bi-book-fill"></i> Mis Cursos</h1>
        <p class="text-muted mb-4">Cursos que tienes asignados</p>

        <div class="row">
            @foreach (var curso in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@curso.Nombre</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@(curso.Descripcion ?? "Sin descripción")</p>
                            <p class="mb-2">
                                <strong><i class="bi bi-person-fill"></i> Docente:</strong><br />
                                <small>@curso.Docente?.Email</small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-id="@curso.IdCurso" class="btn btn-sm btn-info w-100">
                                <i class="bi bi-eye"></i> Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
