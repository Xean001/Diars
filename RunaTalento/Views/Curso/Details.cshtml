@model RunaTalento.Models.Curso

@{
    ViewData["Title"] = "Detalles del Curso";
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_LayoutAdmin.cshtml" : 
             "~/Views/Shared/_LayoutDocente.cshtml";
}

<div class="@(User.IsInRole("Admin") ? "admin-header" : "")">
    <div class="@(User.IsInRole("Admin") ? "admin-header-content" : "d-flex justify-content-between align-items-center mb-4")">
        <div>
            <h1 class="@(User.IsInRole("Admin") ? "admin-title" : "")">
                <i class="bi bi-book-fill"></i>
                Detalles del Curso
            </h1>
            <p class="@(User.IsInRole("Admin") ? "admin-subtitle" : "text-muted")">Información completa del curso</p>
        </div>
        <a asp-action="Index" class="@(User.IsInRole("Admin") ? "btn-secondary-admin" : "btn btn-secondary")">
            <i class="bi bi-arrow-left"></i>
            Volver
        </a>
    </div>
</div>

<div class="@(User.IsInRole("Admin") ? "admin-content" : "container mt-4")">
    <div class="@(User.IsInRole("Admin") ? "detail-card" : "card")">
        <h4 class="@(User.IsInRole("Admin") ? "detail-card-title" : "card-header")">
            <i class="bi bi-info-circle-fill"></i>
            Información General
        </h4>
        <div class="@(User.IsInRole("Admin") ? "detail-card-body" : "card-body")">
            <div class="@(User.IsInRole("Admin") ? "detail-item" : "mb-3")">
                <span class="@(User.IsInRole("Admin") ? "detail-label" : "fw-bold")">Nombre del Curso:</span>
                <span class="@(User.IsInRole("Admin") ? "detail-value" : "")">@Model.Nombre</span>
            </div>
            <div class="@(User.IsInRole("Admin") ? "detail-item" : "mb-3")">
                <span class="@(User.IsInRole("Admin") ? "detail-label" : "fw-bold")">Descripción:</span>
                <span class="@(User.IsInRole("Admin") ? "detail-value" : "")">@(Model.Descripcion ?? "Sin descripción")</span>
            </div>
            <div class="@(User.IsInRole("Admin") ? "detail-item" : "mb-3")">
                <span class="@(User.IsInRole("Admin") ? "detail-label" : "fw-bold")">Docente Asignado:</span>
                <span class="@(User.IsInRole("Admin") ? "detail-value" : "")">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-person-circle"></i>
                        <div>
                            <div>@Model.Docente?.Nombres @Model.Docente?.Apellidos</div>
                            <small class="text-muted">@Model.Docente?.Email</small>
                        </div>
                    </div>
                </span>
            </div>
        </div>
    </div>

    @if (Model.Actividades != null && Model.Actividades.Any())
    {
        <div class="@(User.IsInRole("Admin") ? "detail-card mt-4" : "card mt-4")">
            <h4 class="@(User.IsInRole("Admin") ? "detail-card-title" : "card-header")">
                <i class="bi bi-clipboard-check-fill"></i>
                Actividades del Curso (@Model.Actividades.Count)
            </h4>
            <div class="@(User.IsInRole("Admin") ? "detail-card-body" : "card-body")">
                <div class="list-group">
                    @foreach (var actividad in Model.Actividades)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">
                                        <i class="bi bi-file-earmark-text"></i>
                                        @actividad.Titulo
                                    </h6>
                                    <p class="mb-1 text-muted small">@actividad.Descripcion</p>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> Creado: @actividad.FechaCreacion.ToString("dd/MM/yyyy")
                                    </small>
                                </div>
                                <span class="badge bg-warning">
                                    <i class="bi bi-star-fill"></i> @actividad.Puntaje pts
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="@(User.IsInRole("Admin") ? "detail-card mt-4" : "card mt-4")">
            <div class="@(User.IsInRole("Admin") ? "detail-card-body" : "card-body") text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #cbd5e1;"></i>
                <p class="text-muted mt-3">No hay actividades creadas para este curso</p>
            </div>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="form-actions mt-4">
            <a asp-action="Index" class="btn-secondary-admin">
                <i class="bi bi-arrow-left"></i>
                Volver a Cursos
            </a>
            <a asp-action="Edit" asp-route-id="@Model.IdCurso" class="btn-warning-admin">
                <i class="bi bi-pencil-fill"></i>
                Editar Curso
            </a>
        </div>
    }
</div>
