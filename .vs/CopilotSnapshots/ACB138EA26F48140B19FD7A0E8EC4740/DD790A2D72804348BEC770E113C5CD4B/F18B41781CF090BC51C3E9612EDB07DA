@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
    var estudiante = ViewBag.Estudiante as RunaTalento.Models.ApplicationUser;
    var medallas = ViewBag.Medallas as List<RunaTalento.Models.MedallaEstudiante>;
    var incentivos = ViewBag.Incentivos as List<RunaTalento.Models.IncentivoEstudiante>;
    var actividades = ViewBag.ActividadesCompletadas as List<RunaTalento.Models.ActividadEstudiante>;
    var nivelActual = ViewBag.NivelActual as RunaTalento.Models.Nivel;
    var siguienteNivel = ViewBag.SiguienteNivel as RunaTalento.Models.Nivel;
    var porcentajeProgreso = ViewBag.PorcentajeProgresoNivel ?? 0;
    var totalActividades = ViewBag.TotalActividades ?? 0;
    var totalMedallas = ViewBag.TotalMedallas ?? 0;
}

<div class="row g-4">
    <!-- Columna izquierda: Progreso Académico -->
    <div class="col-lg-6">
        <div class="perfil-section">
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-star-fill text-purple me-2" style="font-size: 1.5rem;"></i>
                <h4 class="mb-0">Progreso Académico</h4>
            </div>
            <p class="text-muted mb-4">Tu avance en el sistema</p>

            <!-- Puntos Totales -->
            <div class="progreso-card mb-4">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <i class="bi bi-star-fill" style="font-size: 3rem; color: #f59e0b;"></i>
                </div>
                <h2 class="puntos-totales">@estudiante?.PuntajeTotal</h2>
                <p class="mb-0" style="color: #92400e; font-weight: 600;">Puntos Totales</p>
            </div>

            <!-- Nivel Actual -->
            @if (nivelActual != null)
            {
                <div class="text-center mb-4">
                    <div class="nivel-badge mb-3">
                        <div class="nivel-numero">@nivelActual.IdNivel</div>
                        <span>Nivel Actual</span>
                    </div>
                    <p class="mt-2 mb-1 fw-semibold" style="color: #1e293b;">@nivelActual.Nombre</p>
                    <small class="text-muted">@nivelActual.PuntajeMinimo/@nivelActual.PuntajeMaximo pts</small>
                </div>

                @if (siguienteNivel != null)
                {
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">Progreso al siguiente nivel</small>
                            <small class="fw-bold" style="color: var(--purple-primary);">@(siguienteNivel.PuntajeMinimo - estudiante.PuntajeTotal) pts para subir</small>
                        </div>
                        <div class="progress-bar-custom">
                            <div class="progress" style="width: @porcentajeProgreso%">
                                @porcentajeProgreso%
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    Aún no tienes un nivel asignado. ¡Completa actividades para obtener tu primer nivel!
                </div>
            }
        </div>

        <!-- Logros Desbloqueados -->
        <div class="perfil-section">
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-unlock-fill text-success me-2" style="font-size: 1.5rem;"></i>
                <h4 class="mb-0">Logros Desbloqueados</h4>
            </div>
            <p class="text-muted mb-4">Reconocimientos obtenidos</p>

            <div class="logros-list">
                @if (totalActividades >= 10)
                {
                    <div class="logro-item">
                        <i class="bi bi-unlock-fill"></i>
                        <div>
                            <strong>10 actividades completadas</strong>
                            <br><small class="text-muted">¡Excelente dedicación!</small>
                        </div>
                    </div>
                }
                @if (totalActividades >= 1)
                {
                    <div class="logro-item">
                        <i class="bi bi-unlock-fill"></i>
                        <div>
                            <strong>Racha de 7 días</strong>
                            <br><small class="text-muted">Mantén tu constancia</small>
                        </div>
                    </div>
                }
                @if (totalMedallas >= 1)
                {
                    <div class="logro-item">
                        <i class="bi bi-unlock-fill"></i>
                        <div>
                            <strong>Top 5 del ranking</strong>
                            <br><small class="text-muted">¡Sigue así!</small>
                        </div>
                    </div>
                }
                
                @if (totalActividades == 0 && totalMedallas == 0)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Completa actividades para desbloquear logros
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Columna derecha: Mis Medallas e Incentivos -->
    <div class="col-lg-6">
        <!-- Mis Medallas -->
        <div class="perfil-section">
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-award-fill me-2" style="font-size: 1.5rem; color: #f59e0b;"></i>
                <h4 class="mb-0">Mis Medallas</h4>
            </div>
            <p class="text-muted mb-4">Reconocimientos obtenidos</p>

            @if (medallas != null && medallas.Any())
            {
                <div class="medallas-grid">
                    @foreach (var medallaEst in medallas)
                    {
                        <div class="medalla-item">
                            <div class="medalla-icon">
                                @if (!string.IsNullOrEmpty(medallaEst.Medalla?.ImagenUrl))
                                {
                                    <img src="@medallaEst.Medalla.ImagenUrl" alt="@medallaEst.Medalla?.Nombre" style="width: 60px; height: 60px;">
                                }
                                else
                                {
                                    <i class="bi bi-award-fill"></i>
                                }
                            </div>
                            <div class="medalla-nombre">@medallaEst.Medalla?.Nombre</div>
                            <div class="medalla-fecha">
                                <i class="bi bi-calendar3"></i> @medallaEst.FechaOtorgada.ToString("dd-MM-yyyy")
                            </div>
                            <div class="medalla-tipo medalla-oro">Oro</div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-award" style="font-size: 4rem; color: var(--gray-text);"></i>
                    <h5 class="mt-3 mb-2">Aún no tienes medallas</h5>
                    <p class="text-muted mb-0">Completa actividades y logra objetivos para obtener medallas</p>
                </div>
            }
        </div>

        <!-- ? Mis Incentivos -->
        <div class="perfil-section">
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-gift-fill me-2" style="font-size: 1.5rem; color: #14b8a6;"></i>
                <h4 class="mb-0">Mis Incentivos</h4>
            </div>
            <p class="text-muted mb-4">Recompensas automáticas obtenidas</p>

            @if (incentivos != null && incentivos.Any())
            {
                <div class="incentivos-estudiante-grid">
                    @foreach (var incentivoEst in incentivos)
                    {
                        <div class="incentivo-estudiante-item">
                            <div class="incentivo-estudiante-icon">
                                @if (!string.IsNullOrEmpty(incentivoEst.Incentivo?.IconoUrl))
                                {
                                    <i class="@incentivoEst.Incentivo.IconoUrl"></i>
                                }
                                else
                                {
                                    <i class="bi bi-gift-fill"></i>
                                }
                            </div>
                            <div class="incentivo-estudiante-info">
                                <div class="incentivo-estudiante-nombre">@incentivoEst.Incentivo?.Nombre</div>
                                <div class="incentivo-estudiante-descripcion">
                                    @(incentivoEst.Incentivo?.Descripcion ?? "Recompensa especial")
                                </div>
                                <div class="incentivo-estudiante-detalles">
                                    <span class="badge bg-success">
                                        <i class="bi bi-star-fill"></i> @incentivoEst.PuntajeAlObtener pts
                                    </span>
                                    <span class="text-muted" style="font-size: 0.85rem;">
                                        <i class="bi bi-calendar3"></i> @incentivoEst.FechaOtorgado.ToString("dd/MM/yyyy")
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-gift" style="font-size: 4rem; color: var(--gray-text);"></i>
                    <h5 class="mt-3 mb-2">Aún no tienes incentivos</h5>
                    <p class="text-muted mb-0">Los incentivos se otorgan automáticamente al alcanzar ciertos puntos</p>
                </div>
            }
        </div>
    </div>
</div>

