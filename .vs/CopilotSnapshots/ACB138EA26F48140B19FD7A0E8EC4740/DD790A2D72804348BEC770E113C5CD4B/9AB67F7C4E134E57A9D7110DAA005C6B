                @{
                    var puntosEnNivel = estudiante.PuntajeTotal - nivelActual.PuntajeMinimo;
                    var rangoNivel = nivelActual.PuntajeMaximo - nivelActual.PuntajeMinimo;
                    var porcentajeNivel = rangoNivel > 0 ? (int)((puntosEnNivel * 100.0) / rangoNivel) : 0;
                    
                    // Asegurar que el porcentaje esté entre 0 y 100
                    porcentajeNivel = Math.Max(0, Math.Min(100, porcentajeNivel));
                }

