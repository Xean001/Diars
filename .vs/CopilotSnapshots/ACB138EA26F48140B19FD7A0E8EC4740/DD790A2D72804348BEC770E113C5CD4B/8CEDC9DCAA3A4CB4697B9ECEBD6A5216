                <h2 class="puntos-totales">@estudiante?.PuntajeTotal</h2>
                <p class="mb-0" style="color: #92400e; font-weight: 600;">Puntos Totales</p>
            </div>

            <!-- Nivel Actual -->
            @if (nivelActual != null)
            {
                <div class="text-center mb-4">
                    <div class="nivel-badge mb-3">
                        <div class="nivel-numero">@nivelActual.IdNivel</div>
                        <span>Nivel Actual</span>
                    </div>
                    <p class="mt-2 mb-1 fw-semibold" style="color: #1e293b;">@nivelActual.Nombre</p>
                    <small class="text-muted">@nivelActual.PuntajeMinimo/@nivelActual.PuntajeMaximo pts</small>
                </div>

                @* ✅ NUEVO: Progreso de Nivel (dentro del rango actual) *@
                @{
                    var puntosEnNivel = estudiante.PuntajeTotal - nivelActual.PuntajeMinimo;
                    var rangoNivel = nivelActual.PuntajeMaximo - nivelActual.PuntajeMinimo;
                    var porcentajeNivel = rangoNivel > 0 ? (int)((puntosEnNivel * 100.0) / rangoNivel) : 0;
                    
                    // Asegurar que el porcentaje esté entre 0 y 100
                    porcentajeNivel = Math.Max(0, Math.Min(100, porcentajeNivel));
                }

                <div class="progreso-nivel-card mb-4">
                    <div class="d-flex align-items-center mb-3">
