@model IEnumerable<RunaTalento.Models.Curso>

@{
    ViewData["Title"] = "Cursos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-book-fill"></i> Gestión de Cursos</h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Docente"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Curso
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @foreach (var curso in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@curso.Nombre</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@(curso.Descripcion ?? "Sin descripción")</p>
                        <p class="mb-2">
                            <strong><i class="bi bi-person-fill"></i> Docente:</strong><br/>
                            <small>@curso.Docente?.Email</small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@curso.IdCurso" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            @if (User.IsInRole("Admin") || User.IsInRole("Docente"))
                            {
                                <a asp-action="Edit" asp-route-id="@curso.IdCurso" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@curso.IdCurso" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
