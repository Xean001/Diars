                            <i class="bi bi-star-fill text-warning"></i> <strong>Puntaje:</strong> 
                            <span class="badge bg-warning text-dark">@actividad.Puntaje pts</span>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> @actividad.FechaCreacion.ToString("dd/MM/yyyy")
                        </small>
                        <div class="d-flex justify-content-between mt-2">
                            <a asp-action="Details" asp-route-id="@actividad.IdActividad" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            @if (User.IsInRole("Admin") || User.IsInRole("Docente"))
                            {
                                <a asp-action="Edit" asp-route-id="@actividad.IdActividad" class="btn btn-sm btn-warning">
