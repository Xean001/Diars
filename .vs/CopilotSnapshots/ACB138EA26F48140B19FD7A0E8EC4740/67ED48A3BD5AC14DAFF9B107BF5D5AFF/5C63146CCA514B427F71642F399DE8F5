                    <small class="text-muted">@Model.Estudiante?.Email</small>
                </div>
                <small class="form-text text-muted">
                    <i class="bi bi-lock-fill"></i>
                    El estudiante no puede ser modificado
                </small>
            </div>

            <!-- Fecha de Otorgamiento (solo lectura) -->
            <div class="col-md-12 mb-4">
                <label class="form-label">
                    Fecha de Otorgamiento Original
                </label>
                <div class="form-control select-custom" style="background-color: #f8f9fa; cursor: not-allowed;">
