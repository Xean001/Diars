        <input type="hidden" asp-for="IdEstudiante" />
        <input type="hidden" asp-for="IdDocente" />

        <div class="row">
            <!-- Información del Estudiante (solo lectura) -->
            <div class="col-md-12 mb-4">
                <label class="form-label">
