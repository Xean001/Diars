@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Efecto visual al seleccionar medalla
        document.getElementById('IdMedalla').addEventListener('change', function(e) {
            if (e.target.value) {
                e.target.style.borderColor = '#fbbf24';
                e.target.style.boxShadow = '0 0 0 0.2rem rgba(251, 191, 36, 0.25)';
            }
        });

        // Efecto visual al seleccionar estudiante
        document.getElementById('IdEstudiante').addEventListener('change', function(e) {
            if (e.target.value) {
                e.target.style.borderColor = '#fbbf24';
            }
        });
    </script>
}
