                    @if (Model.MedallasEstudiantes != null && Model.MedallasEstudiantes.Any())
                    {
                        <div class="list-group text-start">
                            @foreach (var medallaEst in Model.MedallasEstudiantes)
                            {
                                <div class="list-group-item">
