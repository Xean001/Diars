                            </span>
                        </dd>

                        <dt class="col-sm-3">Fecha de Creación:</dt>
                        <dd class="col-sm-9">
                            <i class="bi bi-calendar"></i> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                        </dd>
                    </dl>

                    <hr />

                    <h5 class="mb-3"><i class="bi bi-people-fill"></i> Entregas de Estudiantes</h5>
                    
                    @if (Model.ActividadesEstudiantes != null && Model.ActividadesEstudiantes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Estudiante</th>
                                        <th>Fecha de Entrega</th>
                                        <th>Puntaje Obtenido</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entrega in Model.ActividadesEstudiantes)
                                    {
                                        <tr>
                                            <td>@entrega.Estudiante?.Nombres @entrega.Estudiante?.Apellidos</td>
                                            <td>@entrega.FechaEntrega.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (entrega.PuntajeObtenido.HasValue)
