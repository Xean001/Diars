@model dynamic

@{
    ViewData["Title"] = "Ranking de Estudiantes";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4">
                <i class="bi bi-graph-up-arrow text-primary"></i> 
                Ranking de Estudiantes
            </h1>
            <p class="lead text-muted">Top 100 estudiantes con mayor puntaje</p>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-trophy-fill"></i> Tabla de Posiciones</h4>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th class="text-center" style="width: 80px;">Posición</th>
                                <th>Estudiante</th>
                                <th class="text-center">Puntaje Total</th>
                                <th class="text-center">Nivel</th>
                                <th class="text-center">Medallas</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var estudiante = Model[i];
                                var posicion = i + 1;
                                var badgeClass = posicion == 1 ? "bg-warning text-dark" : 
                                               posicion == 2 ? "bg-secondary" : 
                                               posicion == 3 ? "bg-danger" : "bg-primary";
                                var icon = posicion <= 3 ? "bi-trophy-fill" : "bi-person-circle";

                                <tr class="@(posicion <= 3 ? "fw-bold" : "")">
                                    <td class="text-center">
                                        <span class="badge @badgeClass fs-6">
                                            <i class="bi @icon"></i> @posicion
                                        </span>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@estudiante.Nombres @estudiante.Apellidos</strong>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-star-fill"></i> @estudiante.PuntajeTotal pts
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (estudiante.IdNivel != null)
                                        {
                                            <span class="badge bg-info">Nivel @estudiante.IdNivel</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sin nivel</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-award-fill"></i> @estudiante.MedallasCount
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Estadísticas generales -->
                <div class="row mt-4">
                    <div class="col-md-4 text-center">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5><i class="bi bi-people-fill"></i> Total Estudiantes</h5>
                                <h2 class="text-primary">@Model.Count</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5><i class="bi bi-star-fill"></i> Puntaje Promedio</h5>
                                <h2 class="text-success">
                                    @{
                                        var promedio = Model.Count > 0 ? 
                                            Model.Sum((Func<dynamic, int>)(x => x.PuntajeTotal)) / Model.Count : 0;
                                    }
                                    @promedio pts
                                </h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5><i class="bi bi-award-fill"></i> Medallas Totales</h5>
                                <h2 class="text-warning">
                                    @Model.Sum((Func<dynamic, int>)(x => x.MedallasCount))
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle fs-1"></i>
                    <h4 class="mt-3">No existen registros en el ranking</h4>
                    <p>Aún no hay estudiantes con puntajes registrados en el sistema.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Actualizar ranking cada 30 segundos
        setInterval(function() {
            location.reload();
        }, 30000);
    </script>
}
