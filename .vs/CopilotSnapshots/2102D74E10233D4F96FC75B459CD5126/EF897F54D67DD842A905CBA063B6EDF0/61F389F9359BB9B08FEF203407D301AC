<!-- Grid de incentivos (Medallas) -->
@if (medallas != null && medallas.Any())
{
    <div class="incentivos-grid">
        @foreach (var medalla in medallas)
        {
            // Determinar color según nombre de la medalla
            var iconoEmoji = medalla.Nombre.Contains("Excelencia") ? "??" :
                            medalla.Nombre.Contains("Digital") || medalla.Nombre.Contains("Libro") ? "??" :
                            medalla.Nombre.Contains("Público") || medalla.Nombre.Contains("Reconocimiento") ? "??" : "???";

            var puntosRequeridos = medalla.Nombre.Contains("Excelencia") ? "5000 pts" :
                                  medalla.Nombre.Contains("Digital") ? "3000 pts" :
                                  medalla.Nombre.Contains("Público") ? "2000 pts" : "1000 pts";

            <div class="incentivo-card">
                <div class="incentivo-card-header">
                    <div class="incentivo-icon">
                        @iconoEmoji
                    </div>
                    <div style="flex: 1;">
                        <h5>@medalla.Nombre</h5>
                        <p>@(medalla.Descripcion ?? "Sin descripción")</p>
                    </div>
                </div>

                <div class="incentivo-badge">@puntosRequeridos</div>

                <div class="d-flex justify-content-between align-items-center" style="padding-top: 16px; border-top: 1px solid var(--gray-border);">
                    <small class="text-muted">Puntos requeridos:</small>
                    <div>
                        <a asp-controller="Medalla" asp-action="Edit" asp-route-id="@medalla.IdMedalla" 
                           class="btn btn-edit-admin btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-controller="Medalla" asp-action="Delete" asp-route-id="@medalla.IdMedalla" 
                           class="btn btn-danger-admin btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="admin-table-container">
        <div class="text-center py-5">
            <i class="bi bi-gift" style="font-size: 4rem; color: var(--gray-text);"></i>
            <h4 class="mt-4 mb-2">No hay incentivos creados</h4>
            <p class="text-muted mb-4">Comienza creando medallas y reconocimientos para tus estudiantes</p>
            <a asp-controller="Medalla" asp-action="Create" class="btn btn-primary-admin">
                <i class="bi bi-plus-circle-fill"></i> Crear Primer Incentivo
            </a>
        </div>
    </div>
}

