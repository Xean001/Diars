                        </label>
                        @if (Model.IdNivel.HasValue)
                        {
                            var nivel = ViewBag.Niveles as SelectList;
                            var nivelActual = nivel?.FirstOrDefault(n => n.Value == Model.IdNivel.ToString());
                            <div class="form-control-admin" style="background-color: #f8f9fa; border-style: dashed;">
                                <i class="bi bi-lock-fill text-muted"></i>
