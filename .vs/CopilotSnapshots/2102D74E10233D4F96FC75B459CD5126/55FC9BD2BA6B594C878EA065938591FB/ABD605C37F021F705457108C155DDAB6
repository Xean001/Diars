@model string
@{
    ViewData["Title"] = "Vista Previa de Documento";
    Layout = "~/Views/Shared/_LayoutDocente.cshtml";
}

<div class="docente-card">
    <div class="card-header-custom">
        <i class="bi bi-file-earmark-text"></i>
        <h3>Vista Previa de Documento</h3>
    </div>
    
    <div class="text-center mb-3">
        <a href="@Model" download class="btn btn-primary-custom">
            <i class="bi bi-download"></i> Descargar Documento
        </a>
        <a href="javascript:history.back()" class="btn btn-secondary-custom">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <div class="documento-viewer">
        @{
            var extension = Path.GetExtension(Model)?.ToLower();
        }

        @if (extension == ".pdf")
        {
            <iframe src="@Model" width="100%" height="800px" style="border: 1px solid #ddd; border-radius: 8px;">
                <p>Tu navegador no soporta la vista previa de PDF. 
                   <a href="@Model" download>Descarga el documento aquí</a>
                </p>
            </iframe>
        }
        else if (extension == ".jpg" || extension == ".jpeg" || extension == ".png" || extension == ".gif")
        {
            <div class="text-center">
                <img src="@Model" alt="Documento" style="max-width: 100%; height: auto; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);" />
            </div>
        }
        else if (extension == ".txt")
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> 
                Vista previa de archivos de texto disponible. 
                <a href="@Model" target="_blank">Abrir en nueva pestaña</a>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center py-5">
                <i class="bi bi-file-earmark" style="font-size: 4rem; color: #fbbf24;"></i>
                <h4 class="mt-3">Vista previa no disponible</h4>
                <p>Este tipo de archivo (@extension) no se puede previsualizar en el navegador.</p>
                <a href="@Model" download class="btn btn-primary-custom">
                    <i class="bi bi-download"></i> Descargar Documento
                </a>
            </div>
        }
    </div>
</div>

<style>
    .documento-viewer {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        min-height: 600px;
    }
</style>
