                                        <option value="@rol.Value" selected="@(rol.Value == ViewBag.RolActual)">
                                            @rol.Text
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="estado" class="form-label">Estado</label>
                                <select class="form-select" id="estado" name="estado">
                                    <option value="Activo" selected="@(Model.Estado == "Activo")">Activo</option>
                                    <option value="Inactivo" selected="@(Model.Estado == "Inactivo")">Inactivo</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="idNivel" class="form-label">Nivel</label>
                                <select class="form-select" id="idNivel" name="idNivel">
                                    <option value="">-- Sin nivel --</option>
                                    @foreach (var nivel in ViewBag.Niveles as SelectList)
                                    {
                                        <option value="@nivel.Value" selected="@(nivel.Selected)">
                                            @nivel.Text
                                        </option>
                                    }
                                </select>
                            </div>
