                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Descripción:</dt>
                        <dd class="col-sm-9">@(Model.Descripcion ?? "Sin descripción")</dd>

                        <dt class="col-sm-3">Docente:</dt>
                        <dd class="col-sm-9">
                            <i class="bi bi-person-fill"></i> @Model.Docente?.Nombres @Model.Docente?.Apellidos
                            <br/><small class="text-muted">@Model.Docente?.Email</small>
                        </dd>
                    </dl>

                    <hr />

                    <h5 class="mb-3"><i class="bi bi-list-task"></i> Actividades del Curso</h5>
                    
                    @if (Model.Actividades != null && Model.Actividades.Any())
                    {
                        <div class="list-group">
                            @foreach (var actividad in Model.Actividades)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@actividad.Titulo</h6>
                                        <span class="badge bg-primary">@actividad.Puntaje pts</span>
                                    </div>
                                    <p class="mb-1">@actividad.Descripcion</p>
                                    <small class="text-muted">Creada: @actividad.FechaCreacion.ToString("dd/MM/yyyy")</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No hay actividades registradas para este curso.
                        </div>
                    }

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al listado
                        </a>
                        <div>
                            @if (User.IsInRole("Admin") || User.IsInRole("Docente"))
                            {
                                <a asp-action="Edit" asp-route-id="@Model.IdCurso" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@Model.IdCurso" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
