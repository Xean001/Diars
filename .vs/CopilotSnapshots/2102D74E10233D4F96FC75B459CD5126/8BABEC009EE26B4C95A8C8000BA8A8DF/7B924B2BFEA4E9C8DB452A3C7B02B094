@{
    ViewData["Title"] = "Gestión de Incentivos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var medallas = ViewBag.Medallas as List<RunaTalento.Models.Medalla>;
    var niveles = ViewBag.Niveles as List<RunaTalento.Models.Nivel>;
    var incentivos = ViewBag.Incentivos as List<RunaTalento.Models.Incentivo>;
}

<!-- ============================================ -->
<!-- SECCIÓN: INCENTIVOS AUTOMÁTICOS -->
<!-- ============================================ -->
<div class="admin-header">
    <div class="admin-header-content">
        <div>
            <h1 class="admin-title">
                <i class="bi bi-gift-fill"></i>
                Incentivos Automáticos
            </h1>
            <p class="admin-subtitle">Recompensas que se otorgan automáticamente al alcanzar puntos</p>
        </div>
        <a asp-controller="Incentivo" asp-action="Create" class="btn-primary-admin">
            <i class="bi bi-plus-circle-fill"></i>
            Nuevo Incentivo
        </a>
    </div>
</div>

<div class="admin-content">
    @if (incentivos != null && incentivos.Any())
    {
        <div class="incentivos-grid">
            @foreach (var incentivo in incentivos)
            {
                var cantidadOtorgados = incentivo.IncentivoEstudiantes?.Count ?? 0;
                <div class="incentivo-card @(incentivo.Activo ? "" : "incentivo-inactive")">
                    <div class="incentivo-header">
                        <div class="incentivo-icon-container">
                            @if (!string.IsNullOrEmpty(incentivo.IconoUrl))
                            {
                                <i class="@incentivo.IconoUrl"></i>
                            }
                            else
                            {
                                <i class="bi bi-gift-fill"></i>
                            }
                        </div>
                        <div class="incentivo-info">
                            <h5 class="incentivo-nombre">@incentivo.Nombre</h5>
                            <p class="incentivo-descripcion">@(incentivo.Descripcion ?? "Recompensa especial")</p>
                        </div>
                        
                        @if (incentivo.Activo)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle-fill"></i> Activo
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-pause-circle-fill"></i> Inactivo
                            </span>
                        }
                    </div>

                    <div class="incentivo-stats">
                        <div class="stat-item">
                            <i class="bi bi-star-fill"></i>
                            <div>
                                <strong>@incentivo.PuntosRequeridos pts</strong>
                                <small>Puntos requeridos</small>
                            </div>
                        </div>
                        <div class="stat-item">
                            <i class="bi bi-people-fill"></i>
                            <div>
                                <strong>@cantidadOtorgados</strong>
                                <small>Estudiantes</small>
                            </div>
                        </div>
                    </div>

                    <div class="incentivo-actions">
                        <form asp-controller="Incentivo" asp-action="ToggleActivo" asp-route-id="@incentivo.IdIncentivo" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            @if (incentivo.Activo)
                            {
                                <button type="submit" class="btn-action btn-action-secondary" title="Desactivar">
                                    <i class="bi bi-pause-fill"></i>
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn-action btn-action-success" title="Activar">
                                    <i class="bi bi-play-fill"></i>
                                </button>
                            }
                        </form>
                        <a asp-controller="Incentivo" asp-action="Edit" asp-route-id="@incentivo.IdIncentivo" 
                           class="btn-action btn-action-warning" title="Editar">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-controller="Incentivo" asp-action="Delete" asp-route-id="@incentivo.IdIncentivo" 
                           class="btn-action btn-action-danger" title="Eliminar">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-gift"></i>
            <h3>No hay incentivos automáticos</h3>
            <p>Crea incentivos que se otorgarán automáticamente cuando los estudiantes alcancen ciertos puntos</p>
            <a asp-controller="Incentivo" asp-action="Create" class="btn-primary-admin">
                <i class="bi bi-plus-circle-fill"></i>
                Crear Primer Incentivo
            </a>
        </div>
    }
</div>

<!-- ============================================ -->
<!-- SECCIÓN: MEDALLAS (Manual) -->
<!-- ============================================ -->
<div class="admin-header mt-5">
    <div class="admin-header-content">
        <div>
            <h1 class="admin-title">
                <i class="bi bi-award-fill"></i>
                Medallas (Otorgamiento Manual)
            </h1>
            <p class="admin-subtitle">Medallas que los docentes otorgan manualmente</p>
        </div>
        <a asp-controller="Medalla" asp-action="Create" class="btn-primary-admin">
            <i class="bi bi-plus-circle-fill"></i>
            Nueva Medalla
        </a>
    </div>
</div>

<!-- Grid de Medallas -->
<div class="admin-content">
    @if (medallas != null && medallas.Any())
    {
        <div class="medallas-grid">
            @foreach (var medalla in medallas)
            {
                <div class="medalla-card">
                    <div class="medalla-card-header">
                        <div class="medalla-icon-container">
                            @if (!string.IsNullOrEmpty(medalla.ImagenUrl))
                            {
                                <img src="@medalla.ImagenUrl" alt="@medalla.Nombre" class="medalla-imagen" 
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                <div class="medalla-icon-fallback" style="display: none;">
                                    <i class="bi bi-award-fill"></i>
                                </div>
                            }
                            else
                            {
                                <div class="medalla-icon-fallback">
                                    <i class="bi bi-award-fill"></i>
                                </div>
                            }
                        </div>
                        <div class="medalla-info">
                            <h5 class="medalla-nombre">@medalla.Nombre</h5>
                            <p class="medalla-descripcion">@(medalla.Descripcion ?? "Sin descripción")</p>
                        </div>
                    </div>

                    <div class="medalla-actions">
                        <a asp-controller="Medalla" asp-action="Edit" asp-route-id="@medalla.IdMedalla" 
                           class="btn-action btn-action-warning" title="Editar">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-controller="Medalla" asp-action="Delete" asp-route-id="@medalla.IdMedalla" 
                           class="btn-action btn-action-danger" title="Eliminar">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-award"></i>
            <h3>No hay medallas creadas</h3>
            <p>Comienza creando medallas y reconocimientos para tus estudiantes</p>
            <a asp-controller="Medalla" asp-action="Create" class="btn-primary-admin">
                <i class="bi bi-plus-circle-fill"></i>
                Crear Primera Medalla
            </a>
        </div>
    }
</div>

<!-- Header de la sección Niveles -->
<div class="admin-header mt-5">
    <div class="admin-header-content">
        <div>
            <h1 class="admin-title">
                <i class="bi bi-bar-chart-steps"></i>
                Niveles de Progreso
            </h1>
            <p class="admin-subtitle">Configura los niveles y rangos de puntaje para los estudiantes</p>
        </div>
        <a asp-controller="Nivel" asp-action="Create" class="btn-primary-admin">
            <i class="bi bi-plus-circle-fill"></i>
            Nuevo Nivel
        </a>
    </div>
</div>

<!-- Tabla de Niveles -->
<div class="admin-content">
    @if (niveles != null && niveles.Any())
    {
        <div class="table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Nivel</th>
                        <th>Nombre</th>
                        <th>Rango de Puntaje</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var nivel in niveles)
                    {
                        <tr>
                            <td>
                                <div class="table-item-main">
                                    <div class="nivel-badge">
                                        @nivel.IdNivel
                                    </div>
                                    <strong>Nivel @nivel.IdNivel</strong>
                                </div>
                            </td>
                            <td>
                                <strong>@nivel.Nombre</strong>
                            </td>
                            <td>
                                <span class="badge bg-primary">
                                    @nivel.PuntajeMinimo - @nivel.PuntajeMaximo pts
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-controller="Nivel" asp-action="Edit" asp-route-id="@nivel.IdNivel" 
                                       class="btn-action btn-action-warning" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-controller="Nivel" asp-action="Delete" asp-route-id="@nivel.IdNivel" 
                                       class="btn-action btn-action-danger" title="Eliminar">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-bar-chart-steps"></i>
            <h3>No hay niveles configurados</h3>
            <p>Crea niveles para organizar el progreso de los estudiantes según su puntaje</p>
            <a asp-controller="Nivel" asp-action="Create" class="btn-primary-admin">
                <i class="bi bi-plus-circle-fill"></i>
                Crear Primer Nivel
            </a>
        </div>
    }
</div>

